<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-md-12">
      <div class="ibox">
        <div class="ibox-title">
          <h5>New User</h5>
        </div>
        <div class="ibox-content">
          <%= form_for @user, builder: Users::FormBuilder, html: {class: 'form-horizontal'} do |f| %>
            <%= render partial: 'users/fields', locals: {f: f} %>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
              <div class="col-sm-6 col-sm-offset-2">
                <%= link_to 'Cancel', users_path, class: 'btn btn-default' %>
                <%= submit_tag 'Create user', class: 'btn btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
